        <p class="user">
          <img class="avatar dither" src="<%= @profile_image_url %>" width="48" height="48" alt="User avatar" />
          <span class="names">
            <strong><%= @user_name %></strong><br />
            @<%= @screen_name %>
          </span>
        </p>

